<!-- Create note -->  
<div class="row row-cen">
  <div class="col-lg-7 col-cen">
    <form id="new-note" action="/profile/createnote" method="post">    
      <fieldset style="text-align:left;">
        <label class="c-n-label">Name of the note</label><br>
        <input name="name" style="border-radius:0" class="form-control" placeholder="Enter name" required>    
      </fieldset> <br>
      <fieldset style="text-align:left">
        <label class="c-n-label">Content</label><br>
        <textarea name="content" id="note-content" class="form-control" style="height:20em;border-radius:0" placeholder="Enter content"></textarea>    
      </fieldset> 
      <button class="form-btn" id="create-n" type="submit" value="submit" form="new-note">Create</button> 
    </form>
  </div>
</div>         
