<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <link rel='stylesheet' href='/css/bootstrap.css'>
    <link rel='stylesheet' href='/css/style.css'>
    <script src="/js/jquery-1.11.2.min.js" type="text/javascript"></script>
	<script src="/js/bootstrap.js" type="text/javascript"></script>
	<script src="/js/jquery-home.js" type="text/javascript"></script>
    <link href='https://fonts.googleapis.com/css?family=Merriweather' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>
    <title>Notes..</title>
    
</head>

<body>
    <div class="site-name-area" style="padding: 0.3em 0.5em;"><a style="font-size:325% !important;text-decoration:none" class="site-name" href="/">ONotes</a></div>
    <nav class="navbar navbar-default">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#Navbar"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
        <div class="collapse navbar-collapse" id="Navbar">
            <ul class="nav navbar-nav navbar-left">
                <li><a href="/" title="Home" style="font-size:160%;"><span class="glyphicon glyphicon-home"></span></a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right" style="margin-right:0%">
                <li data-toggle="modal" data-target="#signup-form"><a href="#" id="signup" title="Sign Up"><span class="glyphicon glyphicon-user"></span>&nbsp;Sign Up</a></li>
                <li data-toggle="modal" data-target="#login-form"><a href="#" id="login" title="Login"><span class="glyphicon glyphicon-log-in"></span>&nbsp;&nbsp;Login</a></li>
            </ul>
        </div>
    </nav>
    
<!-- Sign up form -->   
<div class="container-fluid">
    <div id="signup-form" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header signup-head">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h1 style="font-size:3em;color:white"><b>Sign Up</b></h1>
            </div>
            <div class="modal-body">
            <div class="row row-cen">
            <div class="col-lg-11 col-cen">
                <form id="sign-up" action="/signup" method="post" style="text-align:center;">
                    <fieldset>
                        <label class="su-label"><span class="glyphicon glyphicon-user"></span>&nbsp;Full Name:</label><br>
                        <input id="username" name="username" class="form-control" type="text" placeholder="Username" required>
                        <p class="error"><%=superrorusername%></p>
                    </fieldset>
                    <p class="error" id="usernameerror"></p>
                    <fieldset>
                        <label class="su-label"><span class="glyphicon glyphicon-envelope"></span>&nbsp;Email:</label><br>
                        <input id="email" name="email" class="form-control" type="text" placeholder="email" required>
                        <p class="error"><%=superroremail%></p>
                    </fieldset>
                    <p class="error" id="emailerror"></p>
                    <fieldset>
                        <label class="su-label">Password:</label><br>
                        <input name="password" class="form-control" type="password" placeholder="Select your password for this site" required>
                    </fieldset> 
                    <button class="btn btn-info form-btn" type="submit" value="submit" form="sign-up">Signup</button><br>
                    <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#login-form">Already a member? Login.</a>
                </form>
            </div>
            </div>    
            </div>
          </div>
        </div>
    </div> 
</div>
<script>
$(document).ready(function(){
    $("#signup-form").modal("<%=signupmodal%>");
    $("#login-form").modal("<%=loginmodal%>");
    /*$("#username").blur(function(){
        console.log($(this).val());
        $.post('/check/Username',{s:$(this).val()},function(data){
            if(data){
                $('#usernameerror').html("This username already exists");    
            }
            else{
                $('#usernameerror').html("");
            }
        });
    });*/
    $("#email").blur(function(){
        $.post('/check/Email',{s:$(this).val()},function(data){
            if(data){
                $('#emailerror').html("This email already exists");    
            }
            else{
                $('#emailerror').html("");
            }
        });
    });
});
</script>
<!-- Sign up form -->   
    
<!-- login form-->
<div class="container-fluid">
    <div id="login-form" style="margin-top:5em;" class="modal fade" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header signup-head">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h1 style="font-size:3em;color:white;"><b>Login</b></h1>
            </div>
            <div class="modal-body">
            <div class="row row-cen">
            <div class="col-lg-11 col-cen">
                <form id="log-in" action="/login" method="post">
                    <fieldset>
                        <label class="su-label"><span class="glyphicon glyphicon-user"></span>&nbsp;Email:</label><br>
                        <input name="email" class="form-control" type="text" placeholder="Your registered email id" required>
                    </fieldset><br>
                    <fieldset>
                        <label class="su-label">Password:</label><br>
                        <input name="password" class="form-control" type="password" placeholder="Your password for this site" required>
                    </fieldset>   
                    <p class="error"><%=loginerror%></p>  
                    <button class="btn btn-info form-btn" type="submit" value="submit" form="log-in">Login</button>
                </form>
            </div>
            </div>    
            </div>
          </div>
        </div>
    </div> 
</div>  
<!-- login form -->    
   
    </body>
</html>